<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_event"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/niall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mon, May 17-Fri, May 21 - 8:00PM"
        android:textColor="@color/primary"
        app:layout_constraintStart_toEndOf="@id/iv_event"
        app:layout_constraintTop_toTopOf="@id/iv_event"
        android:layout_margin="@dimen/margin_medium_2" />

    <TextView
        android:id="@+id/tv_event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Irish Blondie of the boyband"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/iv_event"
        app:layout_constraintTop_toBottomOf="@id/tv_date_time"
        android:layout_margin="@dimen/margin_medium_2" />

    <ImageView
        android:id="@+id/iv_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_favorite"
        android:layout_margin="@dimen/margin_medium_3"
        app:layout_constraintTop_toBottomOf="@id/tv_event_title"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_share"
        app:layout_constraintEnd_toStartOf="@id/iv_favorite"
        app:layout_constraintTop_toBottomOf="@id/tv_event_title"
        android:layout_margin="@dimen/margin_medium_3"/>


</androidx.constraintlayout.widget.ConstraintLayout>